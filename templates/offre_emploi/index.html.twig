{% extends 'base.html.twig' %}
{% block title %}Les offres d'emploi{% endblock %}

{% block body %}
    <!-- Page Heading Section Start -->
    <div class="page-heading-section section bg-parallax" data-bg-image="{{asset('assets/images/bg/bg-2.jpg')}}" data-overlay="50">
        <div class="container">
            <div class="page-heading-content text-center">
                <h3 class="title">Les offres d'emploi</h3>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html">Accueil</a></li>
                    <li class="breadcrumb-item active">Offres d'emploi</li>
                </ol>
            </div>
        </div>
    </div>
    <div class="section section-padding">
        <div class="container">
            <div class="row">
                <div class="col-lg-10 col-12 mx-auto">
                    <div class="faq-card card">
                    <!-- Page Heading Section End -->
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>Nom de offre</th>
                                    <th>Description</th>
                                    <th>Date Debut</th>
                                    <th>Date Fin</th>
                                    <th>Exigences</th>
                                    <th>Nombres de Places</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                            {% for offre_emploi in offre_emplois %}
                                <tr>
                                    <td>{{ offre_emploi.NomOffre }}</td>
                                    <td>{{ offre_emploi.Description }}</td>
                                    <td>{{ offre_emploi.DateDebut ? offre_emploi.DateDebut|date('Y-m-d') : '' }}</td>
                                    <td>{{ offre_emploi.DateFin ? offre_emploi.DateFin|date('Y-m-d') : '' }}</td>
                                    <td>{{ offre_emploi.Exigences }}</td>
                                    <td>{{ offre_emploi.NbrPlaces }}</td>
                                    <td>

                                        <a href="{{ path('offre_emploi_show_byrecuiter', {'id': offre_emploi.id}) }}">Voir</a>
                                        <a href="{{ path('offre_emploi_edit', {'id': offre_emploi.id}) }}">Modifier</a>

                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="8">no records found</td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    <br>
                <a class="btn btn-dark col-12 mx-auto" href="{{ path('offre_emploi_new') }}">Cr√©er</a>
                </div>
                </div>
                </div>
                </div>
                </div>
{% endblock %}
