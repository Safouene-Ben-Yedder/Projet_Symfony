                            <li class="has-children"><a href="{{ path('Acceuil') }}">Accueil</a></li>

                        </ul>
                    </nav>
                    <!-- Header Menu End -->
                </div>
            </div>
        </header>
               
        <!--OffCanvas Overlay-->
        <div class="offcanvas-overlay"></div>



<!-- Page Heading Section Start -->
    <div class="page-heading-section section bg-parallax" data-bg-image="{{asset('assets/images/bg/bg-1.jpg')}}" data-overlay="50">
        <div class="container">
            <div class="page-heading-content text-center">
                <h3 class="title">Les offres d'emploi</h3>
                <ol class="breadcrumb">
                    <li><a href="#" >{{ app.user.NomUtilisateur }}</a></li>
                    {# <li class="breadcrumb-item active">Mon profil</li> #}
                </ol>
            </div>
        </div>
    </div>

    <div class="section section-padding">

            <div class="row">
                <div class="col-lg-10 col-12 mx-auto">
                    <div class="faq-card card">
                    <!-- Page Heading Section End -->

    <table class="table">
        <thead>
            <tr>

                <th>Nom de offre</th>
                <th>Description</th>
                <th>Date Debut</th>
                <th>Date Fin</th>
                <th>Exigences</th>
                <th>Nombres de Places</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for offre_emploi in offre_emplois %}
            <tr>
                <td>{{ offre_emploi.NomOffre }}</td>
                <td>{{ offre_emploi.Description }}</td>
                <td>{{ offre_emploi.DateDebut ? offre_emploi.DateDebut|date('Y-m-d') : '' }}</td>
                <td>{{ offre_emploi.DateFin ? offre_emploi.DateFin|date('Y-m-d') : '' }}</td>
                <td>{{ offre_emploi.Exigences }}</td>
                <td>{{ offre_emploi.NbrPlaces }}</td>
                <td>

                    <a href="{{ path('offre_emploi_show_byrecuiter', {'id': offre_emploi.id}) }}">Voir</a>
                    <a href="{{ path('offre_emploi_edit', {'id': offre_emploi.id}) }}">Modifier</a>

                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
<br>
    <a class="btn btn-dark col-12 mx-auto" href="{{ path('offre_emploi_new') }}">Créer</a>
{% endblock %}
