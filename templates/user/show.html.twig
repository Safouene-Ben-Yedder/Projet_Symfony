{% extends 'base.html.twig' %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>User</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ user.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ user.password }}</td>
            </tr>
            <tr>
                <th>Nom_utilisateur</th>
                <td>{{ user.NomUtilisateur }}</td>
            </tr>
            <tr>
                <th>CIN</th>
                <td>{{ user.CIN }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ user.Telephone }}</td>
            </tr>
            <tr>
                <th>Date_naissance</th>
                <td>{{ user.DateNaissance ? user.DateNaissance|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ user.Type }}</td>
            </tr>
            <tr>
                <th>Login</th>
                <td>{{ user.Login }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ user.Photo }}</td>
            </tr>
            <tr>
                <th>CV</th>
                <td>{{ user.CV }}</td>
            </tr>
            <tr>
                <th>Nbr_postulation</th>
                <td>{{ user.nbrPostulation }}</td>
            </tr>
            <tr>
                <th>Date_last_login</th>
                <td>{{ user.dateLastLogin ? user.dateLastLogin|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Etat</th>
                <td>{{ user.Etat ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>IsVerified</th>
                <td>{{ user.isVerified ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('user_index') }}">back to list</a>

    <a href="{{ path('user_edit', {'id': user.id}) }}">edit</a>

    {{ include('user/_delete_form.html.twig') }}
{% endblock %}
